<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        tools:context=".MainActivity">

        <com.sss.simpleDoubleRoundButton.SimpleDoubleRoundButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:button_rect_percent="0.3"
            app:left_background_color="#ff0000"
            app:left_bottom_corners_radius="0dp"
            app:left_text="可以到XML"
            app:left_text_color="#fff"
            app:left_text_size="10sp"
            app:left_top_corners_radius="50dp"
            app:left_touch_background_color="#aa0000"
            app:right_background_color="#0000ff"
            app:right_bottom_corners_radius="50dp"
            app:right_text="查看所有属性"
            app:right_text_color="#fff"
            app:right_text_size="15sp"
            app:right_top_corners_radius="0dp"
            app:right_touch_background_color="#0000aa"
            app:stroke_rect_color="@color/colorAccent"
            app:stroke_width="2dp" />

        <com.sss.simpleDoubleRoundButton.SimpleDoubleRoundButton
            android:id="@+id/buttonTextSize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:left_text="修改文字大小"
            app:right_text="修改文字大小" />

        <com.sss.simpleDoubleRoundButton.SimpleDoubleRoundButton
            android:id="@+id/buttonSize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:button_rect_percent="0.7"
            app:left_text="修改按钮大小"
            app:right_text="修改按钮大小" />

        <com.sss.simpleDoubleRoundButton.SimpleDoubleRoundButton
            android:id="@+id/strokeColor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:left_text="修改边框颜色"
            app:right_text="修改边框颜色"
            app:stroke_rect_color="@color/colorPrimary"
            app:stroke_width="5dp" />

        <com.sss.simpleDoubleRoundButton.SimpleDoubleRoundButton
            android:id="@+id/strokeWidth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:left_text="修改边框大小"
            app:right_text="修改边框大小"
            app:stroke_width="1dp" />

        <com.sss.simpleDoubleRoundButton.SimpleDoubleRoundButton
            android:id="@+id/radius"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:left_bottom_corners_radius="25dp"
            app:left_text="修改圆角"
            app:left_top_corners_radius="25dp"
            app:right_bottom_corners_radius="25dp"
            app:right_text="修改圆角"
            app:right_top_corners_radius="25dp" />
    </LinearLayout>

</ScrollView>